%h1 Список коллекций

%table
  %thead
    %tr
      %th Название
      %th Краткое описание
      %th Дата начала
      %th Дата конца
      %th
      %th
      %th
      %th

  %tbody
    - @collections.each do |collection|
      %tr
        %td= collection.c_name
        %td= collection.description
        %td= collection.date_begin
        %td= collection.date_end
        %td= link_to 'Show', collection
        %td= link_to 'Edit', edit_collection_path(collection)
        %td= link_to 'Destroy', collection, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Новая коллекция', new_collection_path
